{
  "extends": "./tsconfig.base.json",
  "compilerOptions": {
    "composite": true,
    "tsBuildInfoFile": "./node_modules/.tmp/tsconfig.node.tsbuildinfo",

    "paths": {
      "@common/*": ["./modules/common/src/*"]
    },
    "types": ["node"]
  },
  "include": [
    "modules/common/**/*.ts",
    "modules/electron/**/*.ts",
    "project.config.ts",
    "vite.config.*",
    "vitest.config.*"
  ],
  "exclude": [
    "**/*.spec.ts",
    "**/*.test.ts",
    "modules/common/src/renderer/**/*.ts",
    "node_modules",
    "coverage",
    "dist",
    "dist-electron"
  ]
}
