{
  "extends": "./tsconfig.base.json",
  "compilerOptions": {
    "lib": ["ESNext", "DOM", "DOM.Iterable"],
    "moduleDetection": "force",
    "baseUrl": ".",
    "paths": {
      "@assets/*": ["./modules/app/assets/*"],
      "@app/*": ["./modules/app/src/*"],
      "@common/*": ["./modules/common/src/*"],
      "@css/*": ["./modules/app/css/*"]
    },
    "types": ["node", "jsdom", "vitest"],

    "isolatedModules": true
  },
  "include": [
    "types/env.d.ts",
    "modules/**/*.ts",
    "project.config.ts",
    "vite.config.*",
    "vitest.config.*"
  ]
}
